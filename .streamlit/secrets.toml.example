# Streamlit Cloud Secrets Configuration Template
# Copy this file to .streamlit/secrets.toml and fill in your values
# DO NOT commit secrets.toml to Git!

# AWS Configuration
# IMPORTANT: Use IAM Role instead of hardcoded credentials in production
AWS_REGION = "us-east-1"
# AWS_ACCESS_KEY_ID = "your-access-key-id"  # NOT RECOMMENDED
# AWS_SECRET_ACCESS_KEY = "your-secret-key"  # NOT RECOMMENDED

# Bedrock Configuration
BEDROCK_MODEL_ID = "us.anthropic.claude-haiku-4-5-20251001-v1:0"

# Knowledge Base IDs
DESIGN_KB_ID = "YOUR_DESIGN_KB_ID"
ARCHITECTURE_KB_ID = "YOUR_ARCHITECTURE_KB_ID"
DIAGRAM_KB_ID = "YOUR_DIAGRAM_KB_ID"

# S3 Configuration
S3_BUCKET_NAME = "your-bucket-name"
S3_RESULT_BUCKET_NAME = "your-results-bucket"
S3_DIAGRAM_PREFIX = "architecture-diagrams/"

# Application Configuration
PORT = 8080
LOG_LEVEL = "INFO"

# AgentCore Configuration
AGENTCORE_MEMORY_ENABLED = true
AGENTCORE_SESSION_TTL = 3600
AGENTCORE_MEMORY_ID = "YOUR_MEMORY_ID"

# Diagram Rendering Method
DIAGRAM_RENDER_METHOD = "kroki"  # Options: auto, playwright, kroki, mermaid_ink

# AgentCore Gateway Configuration
AGENTCORE_GATEWAY_ID = "YOUR_GATEWAY_ID"
AGENTCORE_GATEWAY_URL = "https://your-gateway-url.amazonaws.com/mcp"
AGENTCORE_ACCESS_TOKEN = "YOUR_ACCESS_TOKEN"

# AWS Cognito Configuration
COGNITO_USER_POOL_ID = "YOUR_USER_POOL_ID"
COGNITO_CLIENT_ID = "YOUR_CLIENT_ID"
COGNITO_CLIENT_SECRET = "YOUR_CLIENT_SECRET"
